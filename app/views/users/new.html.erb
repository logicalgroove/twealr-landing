<!--main-->
<section class="main main-backstretch">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12"> 
        <!--logo-->
        <div class="text-center"><img src="/assets/start/logo.png" data-at2x="/assets/start/logo@2x.png" alt="logo"></div>
          <h3 class='text-center' style="line-height: 1.5em; ">Health knowledge at your fingertips. Ask. Share. Interact.<br> Together We Heal</h3>
        <!--logo end--> 
      </div>
    </div>
    <div class="row">
      <div class="col-md-12"> 
        
        <!--welcome-message-->
        <header class="welcome-message text-center">
          <h1><span class="rotate">Sign Up Today , Get Early Access to our initial launch</span></h1>
        </header>
        <!--welcome-message end--> 
        
        <!--sub-form-->
        <div class="sub-form text-center">
          <div class="row">
            <div class="col-md-5 center-block col-sm-8 col-xs-11">
              <%= form_for @user, :url => { :action => "create" }, id: 'mc-form' do |f| %>
                <div class="input-group">
                  <%= f.text_field :email, :placeholder => "Email", class: "form-control", required: true %>
                  <span class="input-group-btn">
                  <button type="submit" class="btn btn-default" value="Subscribe" name="commit">Submit<i class="fa fa-paper-plane"></i></button>
                  </span> </div>
                <% end %>
              <p id="mc-notification"></p>
            </div>
          </div>
        </div>
        <!--sub-form end--> 
        
        
      </div>
    </div>
  </div>
</section>
<!--main end--> 

